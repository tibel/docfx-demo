{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../src"
        }
      ],
      "dest": "obj/docfxapi"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/docfxapi",
        "dest": "api"
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "arc42/**.md",
          "arc42/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "articles/images/**",
          "arc42/images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [ "apidoc/**.md" ]
      }
    ],
    "dest": "bin/_site",
    "globalMetadataFiles": [],
    "globalMetadata": {
      "_appTitle": "docfx-demo",
      "_appFooter": "Copyright &copy; Your Name here<br>Generated by <strong>DocFX</strong>"
    },
    "fileMetadataFiles": [],
    "template": [
      "default",
      "statictoc",
      "template"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "markdownEngineProperties": {
      "markdigExtensions": [
        "diagrams"
      ]
    },
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ]
  }
}
